{
    "compilerOptions": {
        "outDir": "dashboard/dist",
        "module": "commonjs",
        "sourceMap": true,
        "target": "es6",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "removeComments": false,
        "noImplicitAny": false,
        "moduleResolution": "node",
        "types": [
            "node",
            "mocha"
        ]
    },
    "compileOnSave": true,
    "rewriteTsconfig": true,
    "files": [],
    "filesGlob": [
        "src/server/**/*.ts",
        "src/spec/**/*.ts"
    ],
    "exclude": [
        "node_modules",
        "bower_components",
        "tmp",
        "temp"
    ]
}
